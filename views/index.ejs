<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <i class="fas fa-home text-2xl text-blue-600"></i>
                    <span class="text-xl font-semibold text-gray-800 ml-2">
                        <%= title %>
                    </span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/login" class="px-4 py-2 text-gray-700 hover:text-blue-600">
                        <i class="fas fa-sign-in-alt mr-2"></i>Login
                    </a>
                    <a href="/register" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Sign Up
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="bg-blue-600 text-white py-16">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <h1 class="text-4xl font-bold mb-4">Find Your Dream Property</h1>
            <p class="text-xl mb-8">Discover thousands of properties for sale and rent</p>
            <div class="bg-white rounded-lg p-4 max-w-3xl mx-auto">
                <div class="flex flex-wrap gap-4">
                    <input type="text" placeholder="Search location..." class="flex-1 p-2 border rounded">
                    <button class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Properties -->
    <div class="max-w-6xl mx-auto px-4 py-12">
        <h2 class="text-3xl font-semibold mb-8">Featured Properties</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% property.forEach(property => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="/api/placeholder/400/300" alt="Property image" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2"><%= property.title %></h3>
                        <p class="text-gray-600 mb-4"><%= property.description %></p>
                        <div class="flex justify-between items-center">
                            <span class="text-blue-600 font-semibold">$<%= property.price.toLocaleString() %></span>
                            <span class="text-gray-500"><i class="fas fa-map-marker-alt mr-2"></i><%= property.location %></span>
                        </div>
                        <a href="/properties/<%= property._id %>" class="block mt-4 text-center bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
                            View Details
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Features Section -->
    <div class="bg-gray-50 py-12">
        <div class="max-w-6xl mx-auto px-4">
            <h2 class="text-3xl font-semibold mb-8 text-center">Why Choose Us</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center">
                    <i class="fas fa-search text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-2">Wide Selection</h3>
                    <p class="text-gray-600">Browse through thousands of carefully curated properties</p>
                </div>
                <div class="text-center">
                    <i class="fas fa-hand-holding-usd text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-2">Best Prices</h3>
                    <p class="text-gray-600">Find properties that fit your budget perfectly</p>
                </div>
                <div class="text-center">
                    <i class="fas fa-clock text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
                    <p class="text-gray-600">Our team is always here to help you</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h4 class="text-lg font-semibold mb-4">About Us</h4>
                    <p class="text-gray-400">Your trusted partner in finding the perfect property for your needs.</p>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/properties" class="text-gray-400 hover:text-white">Properties</a></li>
                        <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
                        <li><a href="/about" class="text-gray-400 hover:text-white">About</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
                    <p class="text-gray-400">Email: info@property.com</p>
                    <p class="text-gray-400">Phone: (555) 123-4567</p>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2024 Property Listing. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>