<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recommended Properties</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <i class="fas fa-home text-2xl text-blue-600"></i>
                    <span class="text-xl font-semibold text-gray-800 ml-2">Property Recommendations</span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/profile" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-user mr-2"></i>Profile
                    </a>
                    <a href="/favorites" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-heart mr-2"></i>Favorites
                    </a>
                    <a href="/logout" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <!-- User Preferences Summary -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
            <div class="flex justify-between items-start">
                <div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Your Recommended Properties</h2>
                    <div class="flex flex-wrap gap-4">
                        <% if (user.preferences.location) { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                <i class="fas fa-map-marker-alt mr-2"></i>
                                <%= user.preferences.location %>
                            </span>
                        <% } %>
                        <% if (user.preferences.budgetMin && user.preferences.budgetMax) { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i class="fas fa-dollar-sign mr-2"></i>
                                $<%= user.preferences.budgetMin.toLocaleString() %> - $<%= user.preferences.budgetMax.toLocaleString() %>
                            </span>
                        <% } %>
                        <% if (user.preferences.bedrooms) { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                <i class="fas fa-bed mr-2"></i>
                                <%= user.preferences.bedrooms %> Bedrooms
                            </span>
                        <% } %>
                    </div>
                </div>
                <a href="/preferences" class="text-blue-600 hover:text-blue-700">
                    <i class="fas fa-cog mr-1"></i>
                    Update Preferences
                </a>
            </div>
        </div>

        <!-- Property Grid -->
        <% if (recommendations && recommendations.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% recommendations.forEach(property => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
                        <div class="relative">
                            <img src="/api/placeholder/400/300" alt="<%= property.title %>" class="w-full h-48 object-cover">
                            <div class="absolute top-4 right-4">
                                <button 
                                    onclick="toggleFavorite('<%= property._id %>')" 
                                    class="bg-white rounded-full p-2 shadow-md hover:bg-gray-100"
                                    data-property-id="<%= property._id %>"
                                >
                                    <i class="<%= user.favorites.includes(property._id.toString()) ? 'fas' : 'far' %> fa-heart text-red-500"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-4">
                                <h3 class="text-xl font-semibold text-gray-800"><%= property.title %></h3>
                                <span class="text-lg font-bold text-blue-600">$<%= property.price.toLocaleString() %></span>
                            </div>
                            
                            <p class="text-gray-600 mb-4"><%= property.description %></p>
                            
                            <div class="flex items-center text-gray-500 mb-4">
                                <i class="fas fa-map-marker-alt mr-2"></i>
                                <%= property.location %>
                            </div>

                            <div class="flex justify-between items-center">
                                <div class="flex space-x-4">
                                    <span class="flex items-center text-gray-500">
                                        <i class="fas fa-bed mr-2"></i>
                                        <%= property.bedrooms %>
                                    </span>
                                    <span class="flex items-center text-gray-500">
                                        <i class="fas fa-bath mr-2"></i>
                                        <%= property.bathrooms %>
                                    </span>
                                    <span class="flex items-center text-gray-500">
                                        <i class="fas fa-ruler-combined mr-2"></i>
                                        <%= property.sqft %> sq ft
                                    </span>
                                </div>
                            </div>

                            <!-- Property Tags -->
                            <div class="mt-4 flex flex-wrap gap-2">
                                <% property.tags.forEach(tag => { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                        <%= tag %>
                                    </span>
                                <% }); %>
                            </div>

                            <a href="/properties/<%= property._id %>" 
                               class="mt-4 block w-full text-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                View Details
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- No Results Message -->
            <div class="text-center py-12">
                <i class="fas fa-search text-4xl text-gray-400 mb-4"></i>
                <h3 class="text-xl font-medium text-gray-600">No recommendations available</h3>
                <p class="text-gray-500 mt-2">Please view or like some properties to get personalized recommendations</p>
                <a href="/properties" class="mt-4 inline-block text-blue-600 hover:text-blue-700">
                    Browse Properties
                </a>
            </div>
        <% } %>
    </main>

    <script>
        async function toggleFavorite(propertyId) {
            try {
                const response = await fetch(`/api/properties/${propertyId}/favorite`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });
                
                const data = await response.json();
                
                if (data.success) {
                    const button = document.querySelector(`button[data-property-id="${propertyId}"]`);
                    const icon = button.querySelector('i');
                    icon.classList.toggle('fas');
                    icon.classList.toggle('far');
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
            }
        }

        // Optional: Add similarity score tooltip
        document.addEventListener('DOMContentLoaded', function() {
            const similarityScores =  JSON.stringify(recommendations.map(r => ({ 
                id: r._id, 
                similarity: r.similarity 
            }))) ;
            
            similarityScores.forEach(score => {
                const property = document.querySelector(`[data-property-id="${score.id}"]`);
                if (property) {
                    property.setAttribute('title', `Match Score: ${(score.similarity * 100).toFixed(1)}%`);
                }
            });
        });
    </script>
</body>
</html>