<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recommended Properties</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <i class="fas fa-home text-2xl text-blue-600"></i>
                    <span class="text-xl font-semibold text-gray-800 ml-2">Recommended Properties</span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/profile" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-user mr-2"></i>Profile
                    </a>
                    <a href="/favorites" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-heart mr-2"></i>Favorites
                    </a>
                    <a href="/logout" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <% if (properties && properties.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% properties.forEach(property => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <div class="relative">
                            <img src="/demo.jpg" alt="<%= property.title %>" class="w-full h-48 object-cover">
                        </div>
                        
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= property.title %></h3>
                            <p class="text-gray-600 text-sm mb-4">
                                <i class="fas fa-map-marker-alt mr-2"></i><%= property.location %>
                            </p>
                            <p class="text-blue-600 font-bold text-lg">$<%= property.price.toLocaleString() %></p>
                            <div class="flex items-center text-gray-600 text-sm mt-2">
                                <i class="fas fa-bed mr-2"></i><%= property.bedrooms %> Bedrooms
                            </div>
                            <div class="flex flex-wrap gap-2 mt-4">
                                <% property.tags.forEach(tag => { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                        <%= tag %>
                                    </span>
                                <% }); %>
                            </div>
                            <a href="/properties/<%= property._id %>" class="block mt-4 text-center py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700">
                                View Details
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <i class="fas fa-search text-4xl text-gray-400 mb-4"></i>
                <h3 class="text-xl font-medium text-gray-600">No properties found</h3>
                <p class="text-gray-500 mt-2">Please check back later for recommendations.</p>
            </div>
        <% } %>
    </main>
</body>
</html>
